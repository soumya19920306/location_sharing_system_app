<h5><b>All others users</b></h5>

<table class="table table-condensed">
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Show Publicly Shared Places</th>
    </tr>
  </thead>
  <tbody>
    <% if @all_users_list.present? %>
      <% @all_users_list.each do |user| %>
        <tr>
          <td><%= user['username']  %></td>
          <td><%= user['email']  %></td>
          <td><%= user['show_button'].html_safe  %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<script>
function show_user_shared_location(username){
  window.location.href = '/'+username;
} 
</script>